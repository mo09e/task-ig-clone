<div class="container" id="main_post">
  <div class="row">
    <div class="col-md-6">

      <h3><%= @user.name %></h3>
      <% if @user.image? %>
      <p><%= image_tag(@user.image.url, :size => "80x80") %></p>
      <% else %>
      <p><%= image_tag("/assets/default.png", :size => "80x80") %></p>
      <% end %>
      <p>Nickname:<%= @user.nickname %></p>
      <p>Birthday<%= @user.birthday %></p>
      <p>Email:<%= @user.email %></p>


      <%= link_to "favorites", "/users/#{@user.id}/favorites", class: 'btn btn-danger' %>
      <%= link_to 'Edit', edit_user_path(@user), data: { confirm: '本当に編集しますか？' }, class: 'btn btn-danger' %>
      <%= link_to 'Destroy', @user, method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
    </div>
  </div>
</div>
