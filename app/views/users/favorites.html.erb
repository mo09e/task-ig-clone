<div class="container" id="main_post">
  <div class="row">
    <div class="col-md-6">
      <h3><%= @user.nickname %>さんのお気に入り一覧</h3>

      <% @favorites.each do |favorite| %>
      <p>user:<%= favorite.picture.user.nickname %></p>
      <P>content:<%= favorite.picture.content %></p>
      <p><%= image_tag favorite.picture.post_image.url, size: '200x200' %></p>
      <% end %>
    </div>
  </div>
</div>
