<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Post image</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.content %></td>
        <td><%= image_tag picture.post_image.url %></td>
        <td><%= picture.user.name %></td>
        <td><%= link_to 'Show', picture %></td>
        <% if current_user.id == picture.user_id %>
          <td><%= link_to 'Edit', edit_picture_path(picture), data: { confirm: '本当に編集しますか？' } %></td>
          <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_picture_path %>
